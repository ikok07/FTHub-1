<%- include('../includes/head') -%>
<body class="normal-body">
  <header class="register--header">
    <a class="logo-a" href="/">
      <img
        class="reset-img"
        src="images/logo.png"
        alt="FTHub logo"
      />
    </a>
  </header>

  <% if (errMessage) { %>
  <h2 class="error-message"><%= errMessage %></h2>
  <% } %>

  <!-- prettier-ignore -->
  <% if (successMessage) { %>
  <h2 class="success-message"><%= successMessage %></h2>
  <% } %>

  <main class="container">
    <div class="register-container">
      <div class="register-header">
        <h1>Създаване на профил в FTHub</h1>
      </div>
      <div class="register-main">
        <form action="/new-password" method="POST">
          <input type="hidden" name="userId" value="<%= userId %>">
          <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
          <div class="register-names">
          <div class="register-password">
            <span>Парола</span>
            <input
              type="password"
              name="newPassword"
              class="register-password-input"
            />
          </div>
          <div class="reg-log-button">
            <button class="reg-button">Промяна</button>
          </div>
        </form>
      </div>
    </div>
  </main>
</body>
